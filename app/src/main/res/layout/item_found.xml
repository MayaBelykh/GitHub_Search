<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:onClick="openRepo"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:id="@+id/ll_item_found"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tw_if_repo_name"
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                android:layout_weight="12"
                android:gravity="center_vertical"
                android:textColor="@color/colorTextLink" />

            <TextView
                android:id="@+id/tw_if_stargazers"
                style="@style/TextAppearance.AppCompat.Small"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginHorizontal="5dp"
                android:layout_weight="2"
                android:gravity="center_vertical|end"
                android:textColor="@color/colorTextPrimary" />

            <ImageView
                android:id="@+id/iv_if_star"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="5dp"
                android:layout_weight="0.7"
                android:background="@android:color/white"
                android:scaleType="fitCenter"
                android:src="@android:drawable/btn_star_big_on" />
        </LinearLayout>

        <TextView
            android:id="@+id/tw_if_readme"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:gravity="center_vertical"
            android:textColor="@color/colorTextPrimaryDark" />

        <LinearLayout
            android:id="@+id/ll_if_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tw_if_language"
                style="@style/TextAppearance.AppCompat.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                android:gravity="center_vertical"
                android:textColor="@color/colorTextPrimary" />

            <TextView
                android:id="@+id/tw_if_license"
                style="@style/TextAppearance.AppCompat.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                android:gravity="center_vertical"
                android:textColor="@color/colorTextPrimary" />

            <TextView
                android:id="@+id/tw_if_updated"
                style="@style/TextAppearance.AppCompat.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                android:gravity="center_vertical"
                android:textColor="@color/colorTextPrimary" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>